<%= form_tag({controller: "tests", action: "test_results" },  method: :post) do %>
    <div>
      <%= label_tag(:name) %>
      <%= text_field_tag(:name)%>
    </div>
    <div>
      <%= label_tag(:surname) %>
      <%= text_field_tag(:surname)%>
    </div>
    <div>
      <%= label_tag(:group) %>
      <%= text_field_tag(:group)%>
    </div>
    <h3>Questions:</h3>
     <% @questions.each do |q| %>
       <p><b><%= q.title %></b></p>
        <% q.answers.each do |a| %>
            <div>
              <%= radio_button_tag(q.title, a.title) %>
              <%= label_tag(a.title) %>
            </div>
        <% end %>
        <hr>
     <% end %>
    <div>
      <%= button_tag 'Finish test', class: 'btn btn-success' %>
    </div>
<% end %>